<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:keepScreenOn="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:id="@+id/robot_ip_edit"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="192.168.0.1"
            android:hint="Robot Ip"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="connect"
            android:layout_height="wrap_content"
            android:text="Connect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rest"
            android:onClick="onRest"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sit"
            android:onClick="onSit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wake"
            android:onClick="onWake"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lying"
            android:onClick="onLying"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonjour"
            android:onClick="onBonjour"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bye"
            android:onClick="onBye"/>
        <Button
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="Y"
            android:onClick="onYou"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="20dp"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:onClick="onTurnLeft"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:onClick="onGoToFront"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:onClick="onTurnRight"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:onClick="onGoToLeft"/>
        <Button
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:onClick="onStop"
            android:text="STOP!"
            android:layout_height="100dp"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:onClick="onGoToRight"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:text="CONF"
            android:onClick="onConf"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:onClick="onGoToBack"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:text="VIDEO"
            android:onClick="onVideo"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="8dp"
            android:id="@+id/statustext"
            android:text="OFFLINE" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:onClick="onQuit"/>
    </LinearLayout>

</LinearLayout>